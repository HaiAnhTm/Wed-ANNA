@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutNoNavigation.cshtml";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-md-5 mt-md-4 pb-5">

                        <h2 class="fw-bold mb-2 text-uppercase">Đăng Ký</h2>

                        <form action="Index" method="POST" id="form-signIn">

                            <div class="form-group">
                                <label class="form-label mt-4">Tài khoản</label>
                                <input type="text" class="form-control" placeholder="Tài khoản" id="input-username" name="Username">
                                <span class="text-warning" id="notify_username"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label mt-4">Mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Mật khẩu" id="input-password" name="Password">
                                <span class="text-warning" id="notify_password"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label mt-4">Xác nhận mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Xác nhận mật khẩu" id="input-password-confirm">
                                <span class="text-warning" id="notify_password_confirm"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label mt-4">Tên khách hàng</label>
                                <input type="text" class="form-control" placeholder="Tên khách hàng" id="input-name" name="Name">
                                <span class="text-warning" id="notify_name"></span>
                            </div>

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <button class="btn btn-outline-light btn-lg px-5 button-submit" type="button" id="button_register">
                                    <span class="spinner-grow-sm" role="status" aria-hidden="true" id="spinner_button"></span>
                                    Đăng ký
                                </button>
                            </div>

                        </form>
                    </div>
                    <div>
                        <p class="mb-0">
                            Bạn đã có tài khoản?  <a href="@Url.Action("Index", "LoginAccount")" class="text-white-50 ">Đăng nhập</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts  {
    <script src="~/Assets/scripts/RegisterAccount.js"></script>
}