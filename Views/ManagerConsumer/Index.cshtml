@model IEnumerable<DotNet_E_Commerce_Glasses_Web.Models.Consumer>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = Model != null ? "~/Views/Shared/_LayoutManager.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khách hàng</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListCart)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberPhone)
        </td>
        <td>
            <img src="@item.Image" style="width: 200px;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListCart)
        </td>
    </tr>
}
</table>
