<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Assets/fontawesome-free-6.4.0-web/css/all.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    @* css *@
    <link rel="stylesheet" href="~/Assets/css/common.css">
    <link rel="icon" href="~/Assets/images/images_Other/logo.png">
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container d-sm-inline-flex justify-content-between">
            <div class="collapse navbar-collapse ">
                <div class="navbar-nav flex-grow-1">
                    <div class="col-md-2">
                        <img src="~/Assets/images/images_Other/logo.png" style="width:96px;" />
                    </div>
                    @Html.ActionLink(" ", "", "Home", new { area = "Others" }, new { @class = "navbar-brand " })
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang chủ", "", "Home", new { area = "Others" }, new { @class = "nav-link fs-4 fw-bolder" })</li>
                    <li>@Html.ActionLink("Sản phẩm", "Index", "ConsumerProduct", new { area = "ForConsumer" }, new { @class = "nav-link fs-4 fw-bolder" })</li>
                </ul>
                <ul class="navbar-nav flex-grow-2">

                    <li class="nav-item ">
                        <a href="@Url.Action("ConsumerCart", "ConsumerProduct")">
                            <i class="fa-solid fa-cart-shopping" style=" width: 30px; height: 30px;color:black;margin-top:14px;"></i>

                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle show" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            @if (ViewBag.Consumer != null)
                            {
                                if (ViewBag.Consumer.Image != null)
                                {
                                    <img src="@ViewBag.Consumer.Image" style="width: 30px; height: 30px;" class="rounded-circle" />
                                    <strong> @(ViewBag.Consumer != null ? " " + ViewBag.Consumer.Username : "")</strong>
                                }
                            }
                            else
                            {
                                <i class="fa-solid fa-circle-user" style="color: white;"></i>
                            }
                        </a>
                        <div class="dropdown-menu" data-bs-popper="static">
                            <a class="dropdown-item" href="@Url.Action("UpdateConsumer", "ManagerConsumer")">Cập nhật thông tin</a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("", "LoginAccount", null, Request.Url.Scheme)" class="dropdown-item">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <partial name="_Notification"></partial>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>


